{
  "$schema": "https://raw.githubusercontent.com/nicegui-org/nicegui/main/nicegui/static/tauri-v2-schema.json",
  "productName": "ScreenCapture",
  "version": "0.1.0",
  "identifier": "com.screencapture.app",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:5173",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "title": "ScreenCapture",
    "windows": [
      {
        "title": "ScreenCapture",
        "width": 400,
        "height": 300,
        "resizable": true,
        "center": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "plugins": {
    "shell": {
      "open": true,
      "scope": [
        {
          "name": "screencapture-full",
          "cmd": "screencapture",
          "args": [
            { "validator": "\\S+" }
          ]
        },
        {
          "name": "screencapture-region",
          "cmd": "screencapture",
          "args": [
            "-i",
            { "validator": "\\S+" }
          ]
        }
      ]
    }
  }
}
